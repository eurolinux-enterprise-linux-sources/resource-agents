@@ -80,6 +80,7 @@
 OCF_RESKEY_arp_bg_default=true
 OCF_RESKEY_run_arping_default=false
 OCF_RESKEY_preferred_lft_default="forever"
+OCF_RESKEY_monitor_retries_default="1"
 
 : ${OCF_RESKEY_lvs_support=${OCF_RESKEY_lvs_support_default}}
